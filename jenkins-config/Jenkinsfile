pipeline {
    agent {
        docker {
            image 'maven:latest'
            args '-u root -v $HOME/.m2:/root/.m2'
        }
    }

    stages {
        stage('Build') {
            steps {
                echo "Building project..."
                sh 'mvn clean install -DskipTests'
            }
        }

        stage('Linter') {
            steps {
                echo "Linter"
                sh 'mvn checkstyle:check -Dcheckstyle.consoleOutput=true'
            }
        }

        stage('Test') {
            steps {
                echo "Running tests..."
                sh 'mvn test'
            }
        }

        stage('Sonarqube') {
            steps {
                echo "Sonarqube working..."
                sh 'mvn verify sonar:sonar -Dsonar.projectKey=driber-microservice -Dsonar.projectName=driber-microservice -Dsonar.host.url=http://localhost:9000 -Dsonar.token=sqp_6364922258b153c460fd68fecdd7b13f364ddbc4'
            }
        }
    }
}
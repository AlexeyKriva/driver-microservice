pipeline {
    agent {
        docker {
            image 'maven:3-alpine'
            args '-u root'
        }
    }

    stages {
        stage('Build') {
            steps {
                echo "Building project..."
                sh 'mvn clean install -DskipTests -X'
            }
        }

        stage('Linter') {
            steps {
                echo "Linter"
                sh 'mvn checkstyle:check'
            }
        }

        stage('Test') {
            steps {
                echo "Rinning tests..."
                sh 'mvn test'
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploy project"
            }
        }
    }
}
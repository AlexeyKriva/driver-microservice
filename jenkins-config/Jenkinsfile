pipeline {
    agent {
        docker {
            image 'maven:latest'
            args '-u root -v $HOME/.m2:/root/.m2'
        }
    }

    stages {
        stage('Build') {
            steps {
                echo "Building project..."
                sh 'mvn clean install -DskipTests'
            }
        }

        stage('Linter') {
            steps {
                echo "Linter"
                sh 'mvn checkstyle:check -Dcheckstyle.consoleOutput=true'
            }
        }

        stage('Test') {
            steps {
                echo "Rinning tests..."
                sh 'mvn test'
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploy project"
            }
        }
    }
}